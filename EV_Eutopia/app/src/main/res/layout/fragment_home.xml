<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_signup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:strokeColor="@color/border_gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#334B5E"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.5"
                                android:fontFamily="@font/bold"
                                android:paddingLeft="16dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/carHealthStatus"
                                android:textColor="#FFFFFF"
                                android:textSize="22dp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/bg_car_health_status" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="4dp"
                                android:alpha="0.6">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/regular"
                                    android:text="EV Type: "
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/ev_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="1dp"
                                    android:fontFamily="@font/regular"
                                    android:text="4W-1"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"></Space>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/distCoveredCard"
                                    android:layout_width="95dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="60dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#556978">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:alpha="0.4"
                                            android:fontFamily="@font/regular"
                                            android:gravity="center_horizontal"
                                            android:text="Fuel"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:id="@+id/ev_battery"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="4dp"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginTop="4dp"
                                            android:layout_marginEnd="4dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_marginBottom="4dp"
                                            android:layout_weight="1"
                                            android:alpha="0.8"
                                            android:fontFamily="@font/regular"
                                            android:gravity="center"
                                            android:textColor="#ffffff"
                                            android:textSize="36sp" />

                                        <ProgressBar
                                            android:id="@+id/progress_bar"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerInParent="true" />

                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"></Space>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="95dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="60dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#556978">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:alpha="0.4"
                                            android:fontFamily="@font/regular"
                                            android:gravity="center_horizontal"
                                            android:text="Distance"
                                            android:textColor="#ffffff"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:alpha="0.8"
                                            android:fontFamily="@font/regular"
                                            android:gravity="center"
                                            android:text="563 km"
                                            android:textColor="#ffffff"
                                            android:textSize="22sp" />
                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"></Space>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="95dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="60dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#556978">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:alpha="0.4"
                                            android:fontFamily="@font/regular"
                                            android:gravity="center_horizontal"
                                            android:text="Battery Life"
                                            android:textColor="#ffffff"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:alpha="0.8"
                                            android:fontFamily="@font/regular"
                                            android:gravity="center"
                                            android:text="192.4 km"
                                            android:textColor="#ffffff"
                                            android:textSize="18sp" />
                                    </RelativeLayout>

                                </com.google.android.material.card.MaterialCardView>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"></Space>


                            </LinearLayout>

                            <Space
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!--                        <RelativeLayout-->
                            <!--                            android:layout_width="match_parent"-->
                            <!--                            android:layout_height="20dp"-->
                            <!--                            android:background="#556978"-->
                            <!--                            android:layout_marginBottom="0dp">-->

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="20dp"-->
                            <!--                                android:layout_alignParentEnd="true"-->
                            <!--                                android:layout_alignParentRight="true"-->
                            <!--                                android:layout_marginEnd="12dp"-->
                            <!--                                android:layout_marginRight="12dp"-->
                            <!--                                android:alpha="0.6"-->
                            <!--                                android:src="@drawable/ic_arrow_forward"-->
                            <!--                                android:tint="@android:color/white" />-->

                            <!--                        </RelativeLayout>-->
                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/get_directions"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/map_india" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:padding="50dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/maps_pin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:fontFamily="@font/bold"
                            android:paddingLeft="16dp"
                            android:paddingTop="8dp"
                            android:text="Get Directions..."
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:alpha="0.4"
                            android:background="@color/border_gray"
                            android:backgroundTint="@color/colorPrimary"
                            android:backgroundTintMode="multiply">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@drawable/ic_arrow_forward"
                                android:tint="@android:color/white" />

                        </RelativeLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/communty_card"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:fontFamily="@font/bold"
                            android:paddingLeft="16dp"
                            android:paddingTop="6dp"
                            android:text="Eco Stats!!!"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:alpha="0.4"
                            android:background="@color/border_gray"
                            android:backgroundTint="@color/colorPrimary"
                            android:backgroundTintMode="multiply">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@drawable/ic_arrow_forward"
                                android:tint="@android:color/white" />

                        </RelativeLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>